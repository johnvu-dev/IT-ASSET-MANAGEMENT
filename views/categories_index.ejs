<!-- views/index.ejs -->
<%- include('header') -%>
    <%- include('navbar_1header') -%>
    <h1>Categories List</h1>
    <ul>
        <% Category.forEach(varView => { %>
            <li>
                <%= varView.name %> - <%= varView.category_type %>
                <a href="/categories/edit/<%= varView.id %>">Edit</a>
                <a href="/categories/delete/<%= varView.id %>" onclick="return confirm('Are you sure you want to delete this Category?')">Delete</a>
            </li>
        <% }); %>
    </ul>
    <a href="/categories/add">Add New Category</a>
    <%- include('navbar_2footer') -%>
<%- include('footer') -%>
