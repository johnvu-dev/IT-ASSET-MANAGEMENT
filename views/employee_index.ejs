<!-- views/index.ejs -->
<%- include('header') -%>
    <%- include('navbar_1header') -%>
    <h1>Employee List</h1>
    <ul>
        <% employees.forEach(task => { %>
            <li>
                <%= task.first_name %> - <%= task.last_name %>
                <a href="/edit/<%= task.id %>">Edit</a>
                <a href="/delete/<%= task.id %>" onclick="return confirm('Are you sure you want to delete this task?')">Delete</a>
            </li>
        <% }); %>
    </ul>
    <a href="/add">Add New Task</a>
    <%- include('navbar_2footer') -%>
<%- include('footer') -%>
